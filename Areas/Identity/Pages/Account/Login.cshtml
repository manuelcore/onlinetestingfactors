@page
@model LoginModel

@{
    ViewData["Title"] = "Conectare";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

    <div class="col-md-10 offset-md-1">
        <div class="login-form-icon text-center">
            <i class="fas fa-user-circle fa-7x loginIcon">
            </i>
        </div>
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <a href="/Identity/Account/ForgotPassword">Am uitat parola</a>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn butonDegrade btn-block">Conectare</button>
                </div>
            </form>
        </section>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
